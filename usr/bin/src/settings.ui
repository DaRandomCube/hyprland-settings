<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="Ml4wSettingsWindow" parent="AdwPreferencesWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="title">Hyprland Settings</property>
    <child>
      <object class="AdwPreferencesPage" id="settings_page">
        <property name="title">Hyprland Settings</property>
        <property name="icon-name">settings-symbolic</property>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage" id="options_page">
        <property name="title">Options</property>
        <property name="icon-name">open-menu-symbolic</property>
        <child>
          <object class="AdwPreferencesGroup" id="keywords_group">
            <property name="title">Used Keywords</property>
            <property name="description">This list shows all keywords overwritten by the settings app. Remove an entry to restore keyword from hyprland.conf.</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>