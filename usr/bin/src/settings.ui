<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="Ml4wSettingsWindow" parent="AdwPreferencesWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="title" translatable="true">Hyprland Settings</property>
    <child>
      <object class="AdwPreferencesPage" id="settings_page">
        <property name="title" translatable="true">Hyprland Settings</property>
        <property name="icon-name">settings-symbolic</property>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage" id="options_page">
        <property name="title" translatable="true">Options</property>
        <property name="icon-name">open-menu-symbolic</property>
      </object>
    </child>
  </template>
</interface>